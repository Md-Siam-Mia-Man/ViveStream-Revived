{
  "name": "vivestream-revived",
  "version": "5.9.0",
  "description": "Your personal, offline, and stylish media sanctuary. Revived.",
  "main": "src/main/main.js",
  "author": "Md Siam Mia",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --win",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [],
  "devDependencies": {
    "@electron/rebuild": "^4.0.1",
    "electron": "^39.2.3",
    "electron-builder": "^26.0.12"
  },
  "dependencies": {
    "fs-extra": "^11.3.2",
    "knex": "^3.1.0",
    "sortablejs": "^1.15.6",
    "sqlite3": "^5.1.7"
  },
  "overrides": {
    "glob": "^11.0.3"
  },
  "build": {
    "appId": "com.siam.vivestream",
    "productName": "ViveStream",
    "copyright": "Copyright Â© 2025 Md Siam Mia",
    "directories": {
      "output": "release",
      "buildResources": "build"
    },
    "files": [
      "src/**/*",
      "assets/**/*",
      "vendor/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "vendor",
        "to": "vendor"
      },
      {
        "from": "assets",
        "to": "assets"
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "build/icons/icon.ico"
    },
    "nsis": {
      "guid": "FC44F321-AE31-46B5-B6B2-BA2671A4C86C",
      "include": "build/installer.nsh",
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "ViveStream",
      "uninstallDisplayName": "${productName} ${version}",
      "runAfterFinish": true,
      "deleteAppDataOnUninstall": false,
      "installerIcon": "build/icons/icon.ico",
      "uninstallerIcon": "build/icons/uninstallIcon.ico",
      "installerHeader": "build/installer/installerHeader.bmp",
      "installerSidebar": "build/installer/installerSidebar.bmp",
      "license": "build/license.rtf"
    }
  }
}
