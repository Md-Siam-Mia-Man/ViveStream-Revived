{
  "name": "vivestream-revived",
  "version": "9.0.0",
  "description": "Your personal, offline, and stylish media sanctuary. Revived.",
  "main": "src/main/main.js",
  "author": "Md Siam Mia",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "rebuild": "electron-rebuild",
    "files:split": "node helpers/large-file-manager.js split",
    "files:join": "node helpers/large-file-manager.js join",
    "env:clean": "node helpers/cleanup.js",
    "env:update": "node helpers/update-binaries.js",
    "vendor:init": "node helpers/vendor-init.js",
    "build": "node helpers/builder.js",
    "build:debug": "node helpers/builder.js --debug",
    "build:win": "node helpers/builder.js --win",
    "build:linux:all": "node helpers/builder.js --linux --target=all",
    "build:linux:rpm": "node helpers/builder.js --linux --target=rpm",
    "build:linux:deb": "node helpers/builder.js --linux --target=deb",
    "build:linux:appimage": "node helpers/builder.js --linux --target=AppImage",
    "build:linux:flatpak": "node helpers/builder.js --linux --target=flatpak",
    "build:linux:snap": "node helpers/builder.js --linux --target=snap",
    "build:linux:ci": "node helpers/builder.js --linux --target=AppImage,deb,rpm,snap",
    "postinstall": "npm run rebuild && npm run files:join && npm run vendor:init",
    "test": "jest"
  },
  "keywords": [],
  "devDependencies": {
    "@babel/core": "^7.28.5",
    "@babel/preset-env": "^7.28.5",
    "@electron/rebuild": "^4.0.2",
    "babel-jest": "^30.2.0",
    "electron": "^39.2.7",
    "electron-builder": "^26.0.12",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^29.7.0",
    "rimraf": "^6.1.2"
  },
  "dependencies": {
    "fs-extra": "^11.3.2",
    "knex": "^3.1.0",
    "sortablejs": "^1.15.6",
    "sqlite3": "^5.1.7"
  },
  "jest": {
    "testEnvironment": "jsdom"
  },
  "build": {
    "appId": "com.vivestream.revived.app",
    "productName": "ViveStream Revived"
  }
}
